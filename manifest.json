{
  "name": "Domain Search Extension",
  "version": "1.0",
  "description":
    "Shows toast notifications for new properties",
  "icons": {"16": "assets/16.png", "48": "assets/48.png", "128": "assets/128.png"},
  "permissions": [
    "notifications",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "assets/48.png",
    "default_popup": "popup.html",
    "default_title": "Updated saved searches"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/contentscript.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "manifest_version": 2
}
